                                <option>Spot #3</option>
                                <option>Spot #4</option>
                                <option>Spot #5</option>
                                <option>Spot #6</option>
                                <option>Spot #7</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="gridCheck">
                                <label class="form-check-label text-primary" for="gridCheck">
                                    I understand the </label>
                                <a href="#" title="" class="sign-agreement">agreement</a>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Pay with PayPal</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
