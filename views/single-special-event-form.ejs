<div class="row my-5 text-center d-inline">
    <h4>Upcoming <%- specialEvent.specialEventTitle %> Date: <%- specialEvent.specialEventDate %></h4>
</div>
<div class="row my-5 text-left d-inline text-dark">
    <div class="card card-body">
        <h6 class="my-2"><%- specialEvent.specialEventWriteUp.paragraph1 %></h6>
        <h6 class="my-2"><%- specialEvent.specialEventWriteUp.paragraph2 %></h6>
        <h6 class="my-2"><%- specialEvent.specialEventWriteUp.paragraph3 %></h6>
        <h6 class="my-2"><b><%- specialEvent.specialEventWriteUp.paragraph4 %></b></h6>
        <h6 class="my-2"><%- specialEvent.specialEventWriteUp.paragraph5 %></h6>
    </div>
</div>
<div class="row my-5 text-center d-inline">
    <h6><%- specialEvent.specialEventExplanation %></h6>
</div>
<div class="row">
    <div class="col-lg-4 col-md-12">
        <img class="set-height d-block w-100" src="img/market-spaces/Spaces - Main Field.jpg"
             alt="Main Field">
    </div>
    <div class="col-lg-4 col-md-12">
        <img class="set-height d-block w-100" src="img/market-spaces/Fountain.jpg" alt="Fountain">
    </div>
    <div class="col-lg-4 col-md-12">
        <img class="set-height d-block w-100" src="img/market-spaces/FellowshipHall.jpg"
             alt="Fellowship Hall">
    </div>
    <div class="col-12 my-auto px-4 pt-4">
        <form method="post" action="/">
            <input type="hidden" id="eventType" name="eventType" value="SE">
            <input type="hidden" id="eventDate" name="eventDate" value=<%- specialEvent.specialEventDate %>>
            <div class="form-row">
                <div class="form-group col-6">
                    <label for="inputFirstName">First name</label>
                    <input type="text" class="form-control" id="inputFirstName" name="firstName"
                           maxlength="25" pattern="^[a-zA-Z]+(([',. -][a-zA-Z ])?[a-zA-Z]*)*$" title="Please enter a legal first name."
                           required>
                </div>
                <div class="form-group col-6">
                    <label for="inputLastName">Last name</label>
                    <input type="text" class="form-control" id="inputLastName" name="lastName"
                           maxlength="25" pattern="^[a-zA-Z]+(([',. -][a-zA-Z ])?[a-zA-Z]*)*$" title="Please enter a legal last name."
                           required>
                </div>
            </div>
            <div class="form-group">
                <label for="inputSell">Items being sold - NO FRANCHISE SALES</label>
                <input type="text" class="form-control" id="inputSell" name="selling" maxlength="20"
                       pattern="^[a-zA-Z]+(([',. -][a-zA-Z ])?[a-zA-Z]*)*$" title="Cannot contain invalid characters."
                       required>
            </div>
            <div class="form-row">
                <div class="form-group col-5">
                    <label for="inputPhone2">Phone number</label>
                    <input type="tel" class="form-control" id="inputPhone2" name="phone" maxlength="14"
                           required>
                </div>
                <div class="form-group col-7">
                    <label for="inputEmail">Email address</label>
                    <input type="email" class="form-control" id="inputEmail" name="email" required>
                </div>
            </div>
            <div class="form-group">
                <label for="inputSpot">Choose a space</label>
                <select id="inputSpot" class="form-control" name="spot">
                    <% for (var i = 0 ; i < specialEvent.spaces[0].length; i++) { %>
                        <option> <%- specialEvent.spaces[0][i].SPACE_ID %></option>
                    <% } %>

                </select>
            </div>

            <button type="button" class="btn btn-secondary btn-xl mt-3 col-12" data-toggle="modal"
                    data-target="#termOfService-specialEvent" id="reserve-button-2">Reserve & Pay
            </button>

            <p class="my-3 col-12" id="agreement-message-2"><i class="far fa-check-circle"></i>&nbsp;&nbsp;You've
                agreed our term of services</p>
            <button type="submit" class="btn btn-success btn-xl mt-3 col-12" id="pay-button-2" disabled>
                Pay Now
            </button>
            <div class="modal fade" id="termOfService-specialEvent" tabindex="-1" role="dialog"
                 aria-labelledby="termOfService-specialEvent-Title" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title text-dark" id="termOfService-specialEvent-Title">Term
                                of Services</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p class="text-dark text-left">
                                <%- reservation.termOfServices.paragraph1 %>
                            </p>
                            <p class="text-dark text-left">
                                <%- reservation.termOfServices.paragraph2 %>
                            </p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close
                            </button>
                            <button type="button" class="btn btn-success" data-dismiss="modal"
                                    onclick="agreeTermOfService2()">I Agree
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 my-5">
        <button class="btn btn-link" type="button" data-toggle="collapse"
                data-target="#collapseExample2" aria-expanded="false"
                aria-controls="collapseExample2">
            <i class="fas fa-chevron-circle-down"></i>&nbsp;&nbsp;Show parking information
        </button>
        <div class="collapse my-3" id="collapseExample2">
            <%- include('parking-info', {}); %>
        </div>
    </div>
</div>
